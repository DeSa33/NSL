{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NSL",
  "scopeName": "source.nsl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#consciousness-operators" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#function-definition" },
    { "include": "#constants" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.nsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.nsl",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.documentation.nsl",
          "begin": "///",
          "end": "$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.nsl",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolation.nsl",
              "begin": "\\$\\{",
              "end": "\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.nsl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.nsl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.template.nsl",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "variable.other.interpolation.nsl",
              "begin": "\\$\\{",
              "end": "\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.nsl",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.hexadecimal.nsl",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.integer.binary.nsl",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.octal.nsl",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.integer.decimal.nsl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nsl",
          "match": "\\b(if|else|elif|match|case|for|while|loop|break|continue|return|yield)\\b"
        },
        {
          "name": "keyword.declaration.nsl",
          "match": "\\b(fn|function|let|mut|const|var|struct|enum|trait|impl|type|async|await)\\b"
        },
        {
          "name": "keyword.import.nsl",
          "match": "\\b(import|from|export|pub|as)\\b"
        },
        {
          "name": "keyword.operator.logical.nsl",
          "match": "\\b(and|or|not|in|is)\\b"
        },
        {
          "name": "keyword.other.nsl",
          "match": "\\b(try|catch|throw|finally)\\b"
        }
      ]
    },
    "consciousness-operators": {
      "patterns": [
        {
          "name": "keyword.operator.consciousness.holographic.nsl",
          "match": "◈",
          "comment": "Holographic operator - distributed representation"
        },
        {
          "name": "keyword.operator.consciousness.gradient.nsl",
          "match": "∇",
          "comment": "Gradient operator - automatic differentiation"
        },
        {
          "name": "keyword.operator.consciousness.tensor-product.nsl",
          "match": "⊗",
          "comment": "Tensor product - quantum entanglement"
        },
        {
          "name": "keyword.operator.consciousness.quantum.nsl",
          "match": "Ψ",
          "comment": "Quantum branching - superposition states"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipeline.nsl",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.safe-navigation.nsl",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.null-coalescing.nsl",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.range.nsl",
          "match": "\\.\\.|\\.\\.="
        },
        {
          "name": "keyword.operator.namespace.nsl",
          "match": "::"
        },
        {
          "name": "keyword.operator.arrow.nsl",
          "match": "=>|->|->"
        },
        {
          "name": "keyword.operator.matrix.nsl",
          "match": "@"
        },
        {
          "name": "keyword.operator.comparison.nsl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.nsl",
          "match": "=|\\+=|-=|\\*=|/=|%=|\\^=|&=|\\|="
        },
        {
          "name": "keyword.operator.arithmetic.nsl",
          "match": "\\+|-|\\*|/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.bitwise.nsl",
          "match": "&|\\||\\^|~|<<|>>"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.nsl",
          "match": "\\b(int|float|bool|string|char|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        },
        {
          "name": "support.type.collection.nsl",
          "match": "\\b(Vec|Mat|Tensor|List|Map|Set|Array)\\b"
        },
        {
          "name": "support.type.result.nsl",
          "match": "\\b(Result|Option|Ok|Err|Some|None)\\b"
        },
        {
          "name": "support.type.special.nsl",
          "match": "\\b(Prob|Complex)\\b"
        },
        {
          "name": "entity.name.type.nsl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.nsl",
          "match": "\\b(print|println|input|len|type_of|range|enumerate|zip|map|filter|reduce|sum|min|max|abs|sqrt|exp|log|sin|cos|tan|floor|ceil|round)\\b"
        },
        {
          "name": "support.function.tensor.nsl",
          "match": "\\b(zeros|ones|random|tensor|matmul|transpose|reshape|shape|grad|backward)\\b"
        },
        {
          "name": "support.function.activation.nsl",
          "match": "\\b(softmax|relu|sigmoid|tanh|gelu|swish|layer_norm)\\b"
        },
        {
          "name": "entity.name.function.call.nsl",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "match": "\\b(fn|function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "keyword.declaration.function.nsl" },
            "2": { "name": "entity.name.function.nsl" }
          }
        },
        {
          "match": "\\b(struct|enum|trait|type)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.type.nsl" },
            "2": { "name": "entity.name.type.nsl" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.nsl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.nsl",
          "match": "\\b(nil|null|None)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b(let|mut|const)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.nsl" },
            "2": { "name": "variable.other.nsl" }
          }
        },
        {
          "name": "variable.parameter.nsl",
          "match": "(?<=\\()\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=:)"
        }
      ]
    }
  }
}
