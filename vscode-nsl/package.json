{
  "name": "nsl-language",
  "displayName": "NSL - Neural Symbolic Language",
  "description": "Language support for NSL (Neural Symbolic Language) - AI-friendly programming with consciousness operators",
  "version": "1.0.0",
  "publisher": "nsl-lang",
  "icon": "images/nsl-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nsl-lang/vscode-nsl"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "nsl",
    "neural",
    "symbolic",
    "ai",
    "machine learning",
    "tensor",
    "consciousness"
  ],
  "activationEvents": [
    "onLanguage:nsl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "nsl",
        "aliases": [
          "NSL",
          "Neural Symbolic Language",
          "nsl"
        ],
        "extensions": [
          ".nsl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/nsl-file-light.svg",
          "dark": "./images/nsl-file-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "nsl",
        "scopeName": "source.nsl",
        "path": "./syntaxes/nsl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "nsl",
        "path": "./snippets/nsl.json"
      }
    ],
    "configuration": {
      "title": "NSL",
      "properties": {
        "nsl.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to NSL language server executable"
        },
        "nsl.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NSL language server"
        },
        "nsl.format.tabSize": {
          "type": "number",
          "default": 4,
          "description": "Tab size for formatting"
        },
        "nsl.format.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Use spaces instead of tabs"
        },
        "nsl.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics"
        },
        "nsl.gpu.preferCuda": {
          "type": "boolean",
          "default": true,
          "description": "Prefer CUDA over OpenCL when both are available"
        }
      }
    },
    "commands": [
      {
        "command": "nsl.runFile",
        "title": "NSL: Run Current File"
      },
      {
        "command": "nsl.runSelection",
        "title": "NSL: Run Selection"
      },
      {
        "command": "nsl.formatDocument",
        "title": "NSL: Format Document"
      },
      {
        "command": "nsl.restartServer",
        "title": "NSL: Restart Language Server"
      },
      {
        "command": "nsl.showGpuInfo",
        "title": "NSL: Show GPU Information"
      }
    ],
    "keybindings": [
      {
        "command": "nsl.runFile",
        "key": "f5",
        "when": "editorLangId == nsl"
      },
      {
        "command": "nsl.runSelection",
        "key": "shift+enter",
        "when": "editorLangId == nsl && editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nsl.runSelection",
          "when": "editorLangId == nsl && editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "nsl",
        "label": "NSL Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "languages": ["nsl"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the NSL program to debug",
                "default": "${file}"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory",
                "default": "${workspaceFolder}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop on entry point",
                "default": false
              },
              "args": {
                "type": "array",
                "description": "Program arguments",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "trace": {
                "type": "boolean",
                "description": "Enable debug adapter tracing",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "nsl",
            "request": "launch",
            "name": "Debug NSL Program",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "NSL: Launch Program",
            "description": "Launch and debug an NSL program",
            "body": {
              "type": "nsl",
              "request": "launch",
              "name": "Debug ${1:Program}",
              "program": "^\"\\${workspaceFolder}/${2:main.nsl}\"",
              "cwd": "^\"\\${workspaceFolder}\"",
              "stopOnEntry": false
            }
          },
          {
            "label": "NSL: Launch with Stop on Entry",
            "description": "Launch program and stop on first line",
            "body": {
              "type": "nsl",
              "request": "launch",
              "name": "Debug ${1:Program} (Stop on Entry)",
              "program": "^\"\\${workspaceFolder}/${2:main.nsl}\"",
              "cwd": "^\"\\${workspaceFolder}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "nsl"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
