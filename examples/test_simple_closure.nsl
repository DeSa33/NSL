// Simple closure test with debug output
print("=== Simple Closure Debug ===")

fn makeCounter(start) {
    let count = start
    print("makeCounter: initial count =", count)

    fn increment() {
        print("  increment: count before =", count)
        count = count + 1
        print("  increment: count after =", count)
        return count
    }

    return increment
}

let counter = makeCounter(0)
print("First call:")
let r1 = counter()
print("Result:", r1)

print("Second call:")
let r2 = counter()
print("Result:", r2)

print("Third call:")
let r3 = counter()
print("Result:", r3)
