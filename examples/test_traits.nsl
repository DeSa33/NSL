// Test Traits/Interfaces for polymorphism

// Define a trait for printable objects
trait Printable {
    fn describe(self) -> string;
    fn to_string(self) -> string;
}

// Define a struct
struct Point {
    x: number,
    y: number
}

// Implement Printable for Point
impl Printable for Point {
    fn describe(self) {
        return "A point in 2D space"
    }

    fn to_string(self) {
        return "Point"
    }
}

// Create a point and call trait methods
let p = Point { x: 3.0, y: 4.0 }
println("Created a Point")

// Call the implemented trait method via mangled name
let desc = Point_Printable_describe(p)
println(desc)

let str = Point_Printable_to_string(p)
println(str)

println("Trait test complete!")
