// Modulo operator test

fn is_even(n: number) {
    // Using modulo to check even/odd
    if n % 2.0 == 0.0 {
        return 1.0
    }
    return 0.0
}

fn main() {
    print("Modulo tests:")
    print(10.0 % 3.0)   // Should be 1.0
    print(17.0 % 5.0)   // Should be 2.0
    print(8.0 % 4.0)    // Should be 0.0

    print("Even checks:")
    print(is_even(4.0))  // 1.0 (even)
    print(is_even(7.0))  // 0.0 (odd)
    print(is_even(0.0))  // 1.0 (even)
}
