# Test closures with captured variables

fn make_adder(x: number) {
    # This returns a closure that captures x
    (y) => x + y
}

fn main() {
    print("Testing closures:")

    # Test simple closure
    let add5 = make_adder(5.0)
    let result = add5(10.0)
    print("add5(10) = ")
    print(result)

    # Test another adder
    let add10 = make_adder(10.0)
    let result2 = add10(3.0)
    print("add10(3) = ")
    print(result2)

    print("Done!")
}
