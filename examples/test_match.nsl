# Test pattern matching implementation

fn describe_number(n: int) {
    match n {
        case 0 => "zero"
        case 1 => "one"
        case 2 => "two"
        case x => "other"
    }
}

fn is_even(n: int) {
    # For now, test with simple values
    match n {
        case 0 => "even"
        case 2 => "even"
        case 4 => "even"
        case x => "odd"
    }
}

fn main() {
    print("Testing pattern matching:")

    # Test with literal patterns
    print("describe_number(0):")
    print(describe_number(0))

    print("describe_number(1):")
    print(describe_number(1))

    print("describe_number(2):")
    print(describe_number(2))

    print("describe_number(5):")
    print(describe_number(5))

    # Test is_even
    print("is_even(0):")
    print(is_even(0))

    print("is_even(2):")
    print(is_even(2))

    print("is_even(3):")
    print(is_even(3))

    print("Done!")
}
