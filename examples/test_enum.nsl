// Test Algebraic Data Types (Enums with data)

// Simple unit enum (like classic C enums)
enum Color {
    Red,
    Green,
    Blue
}

// Enum with data (tuple variants)
enum Shape {
    Circle(number),
    Rectangle(number, number),
    Point
}

// Create unit variants
let red = Color::Red
let green = Color::Green
let blue = Color::Blue

println("Created color variants")

// Create variants with data
let circle = Shape::Circle(5.0)
let rect = Shape::Rectangle(3.0, 4.0)
let point = Shape::Point

println("Created shape variants")

// Use in function
fn describe_shape(s) {
    println("Got a shape!")
    return 0
}

describe_shape(circle)
describe_shape(rect)
describe_shape(point)

println("Enum test complete!")
