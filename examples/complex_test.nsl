// Complex test - nested control flow, multiple functions

fn is_even(n: number) {
    let half = n / 2.0
    let reconstructed = half * 2.0
    if reconstructed == n {
        return 1.0
    }
    return 0.0
}

fn count_evens(limit: number) {
    let count = 0.0
    let i = 0.0
    while i < limit {
        if is_even(i) == 1.0 {
            count = count + 1.0
        }
        i = i + 1.0
    }
    return count
}

fn sum_of_squares(n: number) {
    let sum = 0.0
    let i = 1.0
    while i <= n {
        sum = sum + i * i
        i = i + 1.0
    }
    return sum
}

fn main() {
    print("Even numbers in 0-10:")
    print(count_evens(10.0))

    print("Sum of squares 1-5:")
    print(sum_of_squares(5.0))

    print("Nested calls test:")
    print(sum_of_squares(count_evens(10.0)))
}
